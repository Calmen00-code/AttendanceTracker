@model DailyAttendanceVM

<form method="post">
    <input type="hidden" id="employeeId" value="@Model.EmployeeId" />
    <input type="hidden" id="Id" value="@Model.Id" />
    
    <div class="row">
        <div class="col-md-12 mb-3">
            <label asp-for="@Model.EmployeeName" class="form-label">User</label>
            <input type="text" class="form-control" value="@Model.EmployeeName" disabled />
        </div>
        <div class="col-md-12 mb-3">
            <label asp-for="@Model.CheckIn" class="form-label">Check In</label>
            <input type="time" asp-for="@Model.CheckIn" class="form-control"/>
        </div>

        <div class="col-md-12">
            <label asp-for="@Model.CheckOut" class="form-label">Check Out</label>
            <input type="time" asp-for="@Model.CheckOut" class="form-control"/>
        </div>
    </div>
</form>
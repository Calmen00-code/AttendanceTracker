@model AttendanceTracker.Models.ViewModels.AuthenticationVM

@{
    ViewData["Title"] = "Authentication";
}

<h1>Record attendance</h1>

@if (typeof(AttendanceTracker.AttendanceTrackerStateMachine.AttendanceTrackerCheckInState).IsAssignableFrom(@Model.AttendanceTrackerState.GetType()) ||
     typeof(AttendanceTracker.AttendanceTrackerStateMachine.AttendanceTrackerCheckInBreakState).IsAssignableFrom(@Model.AttendanceTrackerState.GetType()))
{
    <button type="submit" class="w-100 btn btn-lg btn-primary">Check In</button>
}
else
{
    <button type="submit" class="w-100 btn btn-lg btn-primary">Check Out</button>
}